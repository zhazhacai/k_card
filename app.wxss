@import "assets/styles/base.wxss";
@import "assets/styles/iconfont.wxss";

.content {
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.navigator-hover {
  background: transparent;
}

page {
  position: relative;
  min-height: 100%;
  width: 750rpx;
  background-color: #ffffff;
}

.button-hover {
  background: transparent;
}

button::after {
  border: none;
}

button[plain] {
  border: none;
  overflow: auto;
}

button {
  padding: 0;
  background: transparent;
}

/* ***************** */
.container {
  padding: 0 48rpx 100rpx;
}

.bottom-button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: (to right, RGBA(255, 71, 139, 1), RGBA(224, 0, 134, 1));
  border-radius: 50rpx;
  margin-bottom: 80rpx;
}
.clear{
  clear: both;
}