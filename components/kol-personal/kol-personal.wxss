.notice-info {
    width: 100%;
    height: 160rpx;
    display: flex;
    align-items: center;
    padding-bottom: 50rpx;
    border-bottom: 1px solid rgba(151, 151, 151, .2);
}

.notice-portrait {
    width: 160rpx;
    height: 160rpx;
}
 
.notic-portrait-info {
    width: 100%;
    height: 100%;
}

.notice-info-person {
    height: 100%;
    flex-grow: 1;
    display: flex;
    padding-left: 42rpx;
    flex-direction: column;
    justify-content: space-between;
    font-size: 32rpx;
    font-weight:500;
    color:  rgba(40,40,40,.7);
}

.sub-text {
    font-size: 24rpx;
    color:  rgba(40,40,40,.7);
}

.notice-info-top {
    display: flex;
    flex-direction: column;
}

.notice-nike {
    color: #282828;
    font-weight: 500;
    font-size:16px;
}

.notice-address {
    margin-top: 12rpx;
}

.notice-wechat {
    display: flex;
    align-items: center;
}

.notice-wechat-img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 12rpx;
}