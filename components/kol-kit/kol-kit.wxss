
.flex {
    display: flex;
}

.kcard {
    width: 100%;
    height: 100%;
    padding: 32rpx 20rpx 140rpx;
    box-sizing: border-box;
    overflow-y: scroll;
    color:  rgba(40,40,40,.7);
}

.kcard-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #EDF7F6;
    padding: 0 42rpx;
}

.head-left {
    font-size: 24px;
}

.head-right {
    color: #f5f5f5;
    font-size: 14px;
}

.division {
    margin: 0 32rpx;
}

.kcard-main {
    position: relative;
    margin-top: 18rpx;
    padding: 20rpx 0 130rpx;
    border-radius: 24px;
    background: #fff;
    overflow: hidden;
    box-sizing: border-box;
}

.main-bg {
    width: 100%;
    height: 204rpx;
}

.notice-content {
    padding: 0 52rpx;
    margin-top: -144rpx;
}