.examining-list {
    margin-top: 40rpx;
}

.item {
    position: relative;
    overflow: hidden;
    padding: 40rpx 50rpx 60rpx 50rpx;
    border-radius: 20rpx;
    color: #fff;
}

.background {
    background: linear-gradient(to bottom, #8C2FFC, #3A00FF);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    position: absolute;
    z-index: -1;
}

.title {
    font-size: 40rpx;
    margin-bottom: 60rpx;
}

.content {
    font-size: 28rpx;
}