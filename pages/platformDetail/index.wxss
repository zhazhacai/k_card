.item{
    width: 100%;
    height: 144rpx;
    box-sizing: border-box;
    padding: 48rpx 0;
    border-bottom: 2rpx solid rgba(151, 151, 151, 0.2);
    position: relative;
    margin-top: 34rpx;
}
.item image{
    float: left;
    width: 48rpx;
    height: 48rpx;
}
.name{
    margin-left: 20rpx;
    color: #282828;
    font-size: 32rpx;
    float: left;
    height: 48rpx;
    line-height: 48rpx;
}
.url{
    float: right;
    color: #282828;
    font-size: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
}
.main{
    float:right;
    width:76rpx;
    height: 36rpx;
    line-height: 36rpx;
    margin-top: 10rpx;
    font-size: 20rpx;
    text-align: center;
    color: #fff;
    background-color: #F22A89;
    border-radius: 4rpx;
    margin-right: 40rpx;
}
.title{
    font-size: 24rpx;
    color: RGBA(40, 40, 40, 0.7);
    margin-top: 40rpx;
}
.amount{
    color: RGBA(244, 28, 117, 1);
    font-size: 72rpx;
    margin-top: 10rpx;
}