.platform-list{
    padding: 0 48rpx;
}
.item{
    width: 100%;
    height: 144rpx;
    box-sizing: border-box;
    padding: 48rpx 0;
    border-bottom: 2rpx solid rgba(151, 151, 151, 0.2);
    position: relative;
    margin-top: 34rpx;
}
.item:nth-last-of-type(1){
    border-bottom: 0;
}
.item image{
    float: left;
    width: 48rpx;
    height: 48rpx;
}
.name{
    margin-left: 20rpx;
    color: #282828;
    font-size: 32rpx;
    float: left;
    height: 48rpx;
    line-height: 48rpx;
}
.url{
    float: right;
    color: #282828;
    font-size: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
}
.main{
    float:right;
    width:76rpx;
    height: 36rpx;
    line-height: 36rpx;
    margin-top: 10rpx;
    font-size: 20rpx;
    text-align: center;
    color: #fff;
    background-color: #F22A89;
    border-radius: 4rpx;
    margin-right: 40rpx;
}
.skip{
    float: left;
    width: 204rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    background-color: #ddd;
    font-size: 32rpx;
    text-align: center;
    border-radius:50rpx;
}
.next{
    float: left;
    width: 402rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    background:linear-gradient(163deg,rgba(255,71,139,1) 0%,rgba(224,0,134,1) 100%);
    font-size: 32rpx;
    text-align: center;
    border-radius:50rpx;
    margin-left: 48rpx;
}
.btn-box{
    padding: 32rpx 48rpx 180rpx 48rpx;
    overflow: hidden;
}

